            size_hint_y: None
            height: dp(45)

        TextInput:
            id: nome
            hint_text: "Nome do gasto"
            font_size: Window.width * 0.04
            size_hint_y: None
            height: dp(45)

        Button:
            text: "Salvar"
            font_size: Window.width * 0.045
            size_hint_y: None
            height: dp(55)
            on_release: root.salvar_gasto()

        Button:
            text: "Voltar"
            font_size: Window.width * 0.045
            size_hint_y: None
            height: dp(55)
            on_release: app.sm.current = "menu"

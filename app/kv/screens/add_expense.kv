#:import dp kivy.metrics.dp
#:import Window kivy.core.window.Window

<AddExpenseScreen>:
    cartao: cartao
    tipo: tipo
    valor: valor
    parcelas: parcelas
    data_recorrencia: data_recorrencia
    frequencia: frequencia
    nome: nome
    categoria: categoria

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        Spinner:
            id: categoria
            text: "Categoria"
            values: []
            font_size: Window.width * 0.04
            size_hint_y: None
            height: dp(45)

        Spinner:
            id: cartao
            text: "Selecione um cartÃ£o"
            font_size: Window.width * 0.04
            size_hint_y: None
            height: dp(45)

        Spinner:
            id: tipo
            text: "Tipo de gasto"
            font_size: Window.width * 0.04
            values: ["CrÃ©dito", "DÃ©bito/Pix", "Recorrente"]
            size_hint_y: None
            height: dp(45)

        TextInput:
            id: valor
            hint_text: "Valor"
            font_size: Window.width * 0.04
            size_hint_y: None
            height: dp(45)

        TextInput:
            id: parcelas
            hint_text: "Parcelas"
            font_size: Window.width * 0.04
            size_hint_y: None
            height: dp(45)

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(45)
            TextInput:
                id: data_recorrencia
                text: root.data_hoje()
                font_size: Window.width * 0.04
                size_hint_y: None
                height: dp(45)
                readonly: True
            Button:
                text: "ðŸ“…"
                size_hint_x: None

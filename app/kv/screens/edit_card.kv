#:import dp kivy.metrics.dp

<EditCardScreen>:
    banco: banco_input
    responsavel: resp_input
    apelido: apelido_input
    ultimos_digitos: dig_input

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        Label:
            text: "Editar Cartão"
            size_hint_y: None
            height: dp(40)

        TextInput:
            id: banco_input
            hint_text: "Banco"
            multiline: False

        TextInput:
            id: resp_input
            hint_text: "Responsável"
            multiline: False

        TextInput:
            id: apelido_input
            hint_text: "Apelido"
            multiline: False

        TextInput:
            id: dig_input
            hint_text: "Últimos 4 dígitos"
            multiline: False
            input_filter: "int"

        Button:
            text: "Salvar"
            size_hint_y: None
            height: dp(45)
            on_release: root.salvar()

        Button:
            text: "Cancelar"
            size_hint_y: None
            height: dp(45)
            on_release: root.manager.current = "manage_data"
